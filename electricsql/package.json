{
  "name": "electric-sqlite3-client",
  "version": "0.0.1",
  "description": "Simple REST interface to an electrified SQLite3",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "backend:start": "npx electric-sql start --with-postgres",
    "backend:stop": "npx electric-sql stop",
    "backend:up": "npx electric-sql start --with-postgres --detach",
    "backend:down": "npx electric-sql stop --remove",
    "electric:start": "npx electric-sql start",
    "db:migrate": "npx electric-sql with-config \"npx pg-migrations apply --database {{ELECTRIC_PROXY}} --directory ./db/migrations\"",
    "db:psql": "npx electric-sql psql",
    "client:generate": "npx electric-sql generate --module-resolution nodenext",
    "client:watch": "npx electric-sql generate --watch",
    "client:build": "npx tsc",
    "app:start": "node dist/index.js",
    "app:dev": "nodemon src/index.ts"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "dotenv": "^16.4.5",
    "electric-sql": "latest",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.3",
    "@types/better-sqlite3": "^7.6.10",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.10",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}